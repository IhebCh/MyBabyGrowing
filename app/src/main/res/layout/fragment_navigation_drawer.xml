<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"

    android:orientation="vertical"
    tools:context="com.itech.mybabygrowing.NavigationDrawerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_bg"
        android:paddingLeft="20dp"

        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomPrenom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ahmed Lattali"
            android:textColor="#ff4d4d4d"
            android:paddingTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ageBebe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"


            android:text="Vous etes Ã  la semaine 5"
            android:textColor="#ff4d4d4d"
            android:textSize="17sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navigation_background_color"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="0dp"

        android:focusable="true">


    </ListView>
</LinearLayout>
